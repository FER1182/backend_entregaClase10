html 
    head 
         title  Ingreso de productos
         link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet",integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous") 
    
    body 
         div(class="container")
            h1(style="text-transform: lowercase;") FORMULARIO PARA AGREGAR PRODUCTOS A LA PAGINA   
            form(action="/api/productos/form", method="post")
                 div(class="mb-3")
                    label(for="exampleInputEmail1" class="form-label") Name
                    input(type="text" class="form-control" name="name" id="exampleInputEmail1" aria-describedby="emailHelp")
                 div(class="mb-3")
                    label(for="exa" class="form-label") Price
                    input(type="text" class="form-control" name="price" id="exampleInputPassword1")
                 div(class="mb-3")
                    label(for="exa" class="form-label") Url photo
                    input(type="text" class="form-control" name="urlFoto" id="url")
                 button(type="submit" class="btn btn-primary") Guardar
            a(href="/api/productos") Ver Productos   