html 
    head 
         title  pug-express
         link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet",integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous") 
    
    body 
          h1(id="text",style="text-align:center") PRODUCTOS:      
          div(class="container") 
               table(style="text-align: center;",class="table table-dark table-striped")
                    thead
                         tr
                            th(scope="col") Nombre
                            th(scope="col") Precio
                            th(scope="col") Foto
                
                    each pr in data

                
                         tr
                            td=pr.name  
                            td=pr.price 
                            td 
                              img(src=pr.urlFoto,class="img-fluid",style="max-width: 50px; max-height: 50px;")               
               a(href="/api/productos/form") Ingresar productos                